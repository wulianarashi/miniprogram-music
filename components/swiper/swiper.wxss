.card-swiper {
  height: 420rpx !important;
}

.card-swiper swiper-item {
  width: 610rpx !important;
  left: 70rpx;
  box-sizing: border-box;
  padding: 0rpx 0rpx 70rpx;
  overflow: initial;
}

.card-swiper swiper-item .swiper-item {
  width: 100%;
  display: block;
  height: 100%;
  border-radius: 20rpx;
  transform: scale(0.9);
  transition: all 0.2s ease-in 0s;
  overflow: hidden;
}

swiper.square .wx-swiper-dot {
	background-color: var(--white);
	opacity: 0.4;
	width: 15rpx;
	height: 15rpx;
	border-radius: 20rpx;
	margin: 0 8rpx !important;
}

swiper.square .wx-swiper-dot.wx-swiper-dot-active {
	opacity: 1;
	width: 30rpx;
}

.img {
  display: block;
  height: 100%;
  width: 100%;
}