<swiper class="card-swiper square" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500" bindchange="cardSwiper" indicator-color="#CDCBCC" indicator-active-color="#4EDB97">
  <block wx:for="{{swiperList}}" wx:key="url">
    <swiper-item class="{{cardCur==index?'cur':''}}">
      <view class="swiper-item">
        <image src="{{item.url}}" mode="scaleToFill" wx:if="{{item.type=='image'}}" class="img"></image>
        <video src="{{item.url}}" autoplay loop muted show-play-btn="{{false}}" controls="{{false}}" objectFit="cover" wx:if="{{item.type=='video'}}"></video>
      </view>
    </swiper-item>
  </block>
</swiper>