.mv-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-top: 10rpx;
}

.mv-item {
  width: 48%;
  position: relative;
  padding-bottom: 20rpx;
}

.mv-img {
  width: 100%;
  height: 220rpx;
  border-radius: 12rpx;
}

.mv-name {
  font-size: 26rpx;
  line-height: 1.2;
  padding: 2px 0 0 6px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.count-box {
  box-sizing: border-box;
  padding: 10rpx 14rpx;
  background: rgba(0, 0, 0, 0.3);
  position: absolute;
  right: 10rpx;
  top: 14rpx;
  border-radius: 16rpx;
}

.mv-count {
  font-size: 26rpx;
  color: #fff;
  padding-left: 26rpx;
  background: url(data:image/png;base64,) no-repeat 0 8rpx/22rpx 20rpx;
}
