.bar-box {
  width: 90%;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 10%;
  display: flex;
  align-items: center;
}

.move-box {
  position: relative;
  flex: 1;
}

.movable-area {
  width: 100%;
  height: 34rpx;
  position: absolute;
  bottom: -14rpx;
  left: 0;
}

.movable-view {
  width: 36rpx;
  height: 36rpx;
  background: #fefefe;
  border-radius: 50%;
}

.time {
  width: 64rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  color: var(--lightGray);
  line-height: 30rpx;
}
